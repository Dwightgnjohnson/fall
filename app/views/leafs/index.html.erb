<h1>Listing leafs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leafs.each do |leaf| %>
      <tr>
        <td><%= leaf.name %></td>
        <td><%= leaf.photo %></td>
        <td><%= link_to 'Show', leaf %></td>
        <td><%= link_to 'Edit', edit_leaf_path(leaf) %></td>
        <td><%= link_to 'Destroy', leaf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Leaf', new_leaf_path %>
